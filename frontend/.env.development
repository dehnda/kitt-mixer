# Backend API URL for development
REACT_APP_API_URL=http://localhost:8000

# Fast Refresh settings for better hot reload
FAST_REFRESH=true

# Reduce bundle size checks for faster compilation
GENERATE_SOURCEMAP=false

# Disable browser opening automatically
BROWSER=none

# Enable polling for file changes (network drives require this)
CHOKIDAR_USEPOLLING=true
CHOKIDAR_INTERVAL=2000

# Disable type checking in separate process (faster)
TSC_COMPILE_ON_ERROR=true
ESLINT_NO_DEV_ERRORS=true

# Optimize bundle size
INLINE_RUNTIME_CHUNK=false
